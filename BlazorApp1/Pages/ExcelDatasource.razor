@inherits ExcelDatasourceBase
<div class="row">
    <div class="col-4">
        <h3>Excel Datasource</h3>
    </div>
    <div class="col-8">
        Folder: @_selectedFolder
    </div>
</div>

<RadzenDropDown @ref="_dropDown"
                AllowClear="false"
                TValue="string"
                Data="@_files"
                Style="margin-bottom: 20px; width: auto"
                Change="@(args=>OnSelectedFileChanged(args.ToString()))" />

<RadzenListBox @bind-Value="@_selectedSheet" Data="@Sheets" TextProperty="CompanyName" ValueProperty="CustomerID" Style="margin-bottom: 20px;height:200px;" TValue="string" Change="@(args=> OnSelectedSheetChanged(args.ToString()))" />

<div class="row">
    <h4>Sheets</h4>
    <ul>
        @foreach (string sheet in Sheets)
        {
            <li>
                @if (sheet.Equals(_selectedSheet, StringComparison.OrdinalIgnoreCase))
                {
                    <b>@sheet</b>
                }
                else
                {
                    @sheet
                }

            </li>
        }
    </ul>
</div>

