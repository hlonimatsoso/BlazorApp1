@inherits DashboardBase

@page "/dashboard"

@using BlazorApp1.Data

<h3 class="myCentre">Dashboard</h3>

<PlotyChartBarBase DivName="plotyLine" InputData="@PromoDataList.GetPlotyDataByDate()" Title="Entries Per Date"></PlotyChartBarBase>
<PlotyChartBarBase DivName="plotyHBar" IsHorzontal="true" ChartType="@MyChartType.Bar" InputData="@PromoDataList.GetPlotyDataByDate()" Title="Entries Per Date"></PlotyChartBarBase>
<PlotyChartBarBase DivName="plotyBar" ChartType="@MyChartType.Bar" InputData="@PromoDataList.GetPlotyDataByDate()" Title="Entries Per Date"></PlotyChartBarBase>
<PlotyChartGaugeBase DivName="plotyGauge" Value="@(PromoDataList == null?0:PromoDataList.Count)" ChartType="@MyChartType.indicator" Title="Total Records"></PlotyChartGaugeBase>


<div class="row">
    <div class="col-12 shadow p-3 mb-5 rounded">
        <ExcelDatasource @bind-PromoDataList="@PromoDataList"></ExcelDatasource>
    </div>
</div>

<div class="row">
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <div id="plotyLine"></div>
    </div>
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <div id="plotyBar"></div>
    </div>
</div>

<div class="row">
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <div id="plotyHBar"></div>
    </div>
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <div id="plotyGauge"></div>
    </div>
</div>



<div class="row">
    <div class="col-12 shadow p-3 mb-5 pb-5 bg-white rounded">
        <RadzenComponent ChartType="MyChartType.Bar" Source="@PromoDataList.GetPerGeoLocationMetrics()" Title="Geo Location" Description="Per Geo Location"></RadzenComponent>
    </div>
</div>

<div class="row">
    <div class="col-12 shadow p-3 mb-5 bg-white rounded">
        <RadzenComponent Source="@PromoDataList.GetPerGeoLocationMetrics()" Title="Geo Location" Description="Per Geo Location"></RadzenComponent>
    </div>
</div>

<div class="row">
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <RadzenComponent Source="@PromoDataList.GetPerGeoLocationMetrics()" Title="Geo Location" Description="Per Geo Location"></RadzenComponent>
    </div>
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <RadzenComponent ChartType="MyChartType.Pie" Source="@PromoDataList.GetPerStoreMetrics()" Title="Store" Description="Per Store"></RadzenComponent>
    </div>
</div>
<div class="row">
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <RadzenComponent ChartType="MyChartType.Bar" Source="@PromoDataList.GetPerDateMetrics()" Title="Date" Description="Per Date"></RadzenComponent>
    </div>
    <div class="col shadow p-3 mb-5 bg-white rounded">
        <RadzenComponent ChartType="MyChartType.Donut" Source="@PromoDataList.GetPerEntryMetrics()" Title="Entry" Description="Per Entry"></RadzenComponent>
    </div>
</div>


